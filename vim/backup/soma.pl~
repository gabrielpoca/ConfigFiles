%--------------------------------- - - - - - - - - - -  -  -  -  -   -
% Predicado especialista no calculo da SOMATORIO

somatorio( [],0 ).
somatorio( [X|R],S ) :-
    somatorio( R,S1 ),
    S is S1+X.

%--------------------------------- - - - - - - - - - -  -  -  -  -   -
% Consulta do estado do QUADRO NEGRO

qn( L ) :-
    bagof_rd_noblock( X,X,L ).


limpar :-
	in_noblock(X),
	limpar.

<?php  
   class MainController extends AppController {  

	  var $uses = array('Photo');
	  var $components = array('RequestHandler');

	  /** 
	  * Name: beforeFilter 
	  * Desc: Performs necessary steps and function calls prior to executing 
	  *       any view function calls. 
	  */  
	  function beforeFilter() {  
		 parent::beforeFilter();
		 /* If it is ajax request don't load template. */
		 if($this->RequestHandler->isAjax()){
			$this->layout=null;
		 }
	  }  

	  /** 
	  * Name: index 
	  * Desc: Display the friends index page. 
	  */  
	  function index() {  
		$photos = $this->Photo->find('all', array('order' => array ('Photo.submited_date')));
 	  }  

	  function profile() {

	  }


   }  
?>

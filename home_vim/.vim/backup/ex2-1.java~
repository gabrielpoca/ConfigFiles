class Count {

	int i;

	public Count() {
		i = 0;
	}

	public synchronized void inc() {
		i++;	
	}

	public int getValue() {
		return i;
	}

}


class Inc extends Thread {

	int _times;
	Count _c;

	public Inc(Count c, int times) {
		_times = times;
		_c = c;
	}

	public void run() {
		for(int i = 0; i < _times; i++) {
			_c.inc();
		}
	}
}

class EX12 {

	public static void main(String[] argv) {
		try {
			Count c = new Count();
			Thread[] t = new Thread[10];
			for(int i = 0; i < t.length; i++) 
				t[i] = new Thread(new Inc(c, 10000000));
			for(int i = 0; i < t.length; i++) 
				t[i].start();
			for(int i = 0; i < t.length; i++) 
				t[i].join();
			System.out.println("VALUE "+c.getValue());
		} catch( InterruptedException e) {
		}
	}
}

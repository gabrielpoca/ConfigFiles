<?php

   App:uses('AppHelper','View/Helper');

   class GalleryImage extends AppHelper {

	  function create($id, $picture, $likecount) {
		 $url = $this->Html->url(array('controller'=>'photos', 'action'=>'view', $id));
		 return "<div class='gallery-img-border'><div class='gallery-img'><a href='$url'><img src='$picture' /></a></div><div class='clear'></div><div class='like-count'><span class='left small'>likes: $likecount</span><span class='right small'><a href='#' onClick='submitLike('$id');'>+you</a></span></div></div>";
	  }

   }

?>

<?php
   class CommentsController extends AppController {

	  var $scaffold;

	  function add($id = null) {
		 if($id != null) {
			$newComment = $this->Comment->create();
			$newComment['comment'] = $this->data['Comment']['comment'];
			$newComment['photo_id'] = $id;
			$newComment['fbuser_id'] = $this->user;
			pr($newComment);
			$this->Comment->save($newComment);
			$this->redirect(array('controller' => 'photos', 'action' => 'view', $id));
		 }
	  }

   }
?>

function initialBind() {
   // Insert Shsare Button
   $('.UIActionLinks').prepend('<span><a class="2hot-link" href="#">2HotShare</a></span>  Â· ');
   // OnClick Event
   $('.2hot-link').click(function() {
	  // Show Submit Popup
	  $('#fbxPhotoContentContainer').prepend("<div id='popup'><h3>TwoHotGirls<span id='hide' class='small'><a href='#'>hide</a></span></h3><table><tr><td class='label'><label>avaliable</label></td><td class='imp'><input type='checkbox' /></td></tr><tr><td class='label'><label>comment</label></td><td class='imp'><input type='text' /></td></tr><tr><td></td><td><input id='2hot-submit' type='submit' value='submit' /></td></tr></table><div class='clear'></div></div>");
	  $('#popup').show(300);
	  $('.2hot-link').unbind('click');
	  // OnClick Hide Event
	  $('#hide').click(function() {
		 $('#popup').hide(200);
	  });
	  $('.2hot-link').click(function() {
		 $('#popup').show(300);
	  });
	  // OnClick Submit Button Event
	  $('#2hot-submit').click(function() {
		 var user  = $('#fbPhotoPageAuthorName').find('a').attr('data-hovercard').match(/\d+$/)[0];
		 var name = $('#fbPhotoPageAuthorName').find('a').text();
		 var id = $(location).attr('href').match(/fbid=\d+/)[0].match(/\d+/)[0];
		 var source = $('.fbPhotoImage').attr('src');
		 var link = $(location).attr('href');
		 // Submit Photo
		 $.get('http://2hot-girls.com/photos/submit/', {user:user, name:name, id:id, source:source, link:link}, function(data) {
			$('#popup').hide(200);
			if(data=="0") {
			   $('#fbxPhotoContentContainer').prepend("<div id='login-popup'><h3>Login First</h3><p>You have to login first in <a target='_blank' href='http://2hot-girls.com'>TwoHotGirls</a>.</p></div>");
				  $('#login-popup').find('a').click(function() {
					 $('#login-popup').hide(200);
				  });
				  $('#login-popup').show(300);
			} else if(data == "-2") {
			   alert("Photo aready submited by someone!");
			} else if(data == "-3") {
			   alert("Someone already submited and deleted the photo. It has been updated to you!");

			}else {
			   alert("Submited!");
			}
			return false;
		 });
	  });
   });
   //$('#mainContainer')click(initialBind);
}
initialBind();

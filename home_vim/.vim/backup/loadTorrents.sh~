#!/bin/bash
EXE=/Users/gabrielpoca/Applications/Transmission.app/Contents/MacOS/Transmission
ARGS=""
FOLDER=/Users/gabrielpoca/Series
IFS=$(echo -en "\n\b")
for file in $(find $FOLDER -type f -iname *.torrent | sed 's/ /\ /'); do
	file=$(echo $file | sed 's/ /\\ /g')
	if [ "$ARGS" == "" ]; then
		ARGS="$file" 
	else 
		ARGS="$ARGS $file"
	fi
done
echo "$EXE $ARGS"
$EXE $ARGS

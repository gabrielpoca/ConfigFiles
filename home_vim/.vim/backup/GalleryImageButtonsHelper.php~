<?php

   App::uses('AppHelper', 'View/Helper');

   class GalleryImageButtonsHelper extends AppHelper {

	  var $helpers = array('Html');

	  function create($photo_id, $options) {
		 $report = "<a href=''><li id='report'>".$this->Html->image('dangerG.png')."</li></a>";
		 $delete = "<a href=''><li id='delete'>".$this->Html->link('x', array('controller' => 'photos', $photos['Photo']['id']))."</li></a>";
		 $result;
		 foreach($options as $opt) {
			if($opt == "report") {
			   $result = $result.$report;
			}
			else if($opt == "delete") {
			   $result = $result.$delete;
			}
		 }
		 return 'true';
	  }

   }

?>

	  </title>

	  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.3/jquery.min.js" type="text/javascript"></script>


	  <?php
		 echo $this->Html->css('hotmash');
		 echo $this->Html->css('header');

		 echo $this->Html->script('main');

		 echo $scripts_for_layout;
	  ?>

	  <script type="text/javascript">

		 function loadContent(url) {
			   $('#content').load(url, function() {
					 initialBind();
					 return false;
			   });
		 }

		 function initialBind() {
			   $('#photo1').mouseover(function() {
					 $('.l').css('color', '#FF9900');
			   });	
			   $('#photo1').mouseout(function() {
					 $('.l').css('color', 'black');
			   });
			   $('.mash-item a *').click(function() {
					 $.get($(this).parent().attr('href'));
					 loadContent('<?=$this->Html->url(array('controller' => 'photos', 'action' => 'hotmash'))?>');
					 return false;
			   });
			   $('#photo2').mouseover(function() {
					 $('.r').css('color', '#FF9900');
			   });
			   $('#photo2').mouseout(function() {
					 $('.r').css('color', 'black');
			   });
			   return false;
		 }

		 // document ready setup
		 $(document).ready(function() {
			   initialBind();
		 });
	  </script>
   </head>
   <body>
	  <!-- HEADER DIV -->
	  <div id="header-out">
		 <div id="header">
			<div class="elem" id="header-title">

= form_for @form do |f|
  -if @form.errors.any?
    #error_explanation
      %h3= "#{pluralize(@form.errors.count, "error")} prohibited this form from being saved:"
      %ul
        - @form.errors.full_messages.each do |msg|
          %li= msg

  %table.form-table
    %tr
      %td
        = f.label :name
      %td.full
        %div
          = f.text_field :name
    %tr
      %td
        = f.label :contact
      %td.full
        %div
          = f.text_field :contact
    %tr
      %td
        = f.label :text
      %td.full
        = f.text_area :text
    %tr
      %td
        .actions
          = f.submit 'Save'
      %td.full

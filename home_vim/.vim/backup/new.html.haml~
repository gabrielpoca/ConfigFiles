%h1 New Event
= form_for :event, :url => {:action => :create} do |event_form|
  %div
    = event_form.label :name, "Event Name: "
    = event_form.text_field :name

  = event_form.fields_for :user do |user_form|
    %p
      %div
        = user_form.label :email, 'Email: '
        = user_form.text_field :email

  = event_form.fields_for :place do |place_form|
    %p
      %div
        = place_form.label :name, 'Place: '
        = place_form.text_field :name
      %div
        = place_form.label :time, 'Time: '
        = place_form.datetime_select :time

  = event_form.fields_for :dinner do |dinner_form|
    %p
      %div
        = dinner_form.label :name, 'Dinner: '
        = dinner_form.text_field :name

  = event_form.submit 'Create'
